<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >



    <Button
        android:id="@+id/HistoricSites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginRight="74dp"
        android:layout_marginTop="22dp"
        android:text="View historic sites" />

    <Button
        android:id="@+id/points_interests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/HistoricSites"
        android:layout_alignRight="@+id/HistoricSites"
        android:layout_below="@+id/HistoricSites"
        android:text="Main points of interests" />

    <Button
        android:id="@+id/Transports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Hotels"
        android:layout_alignRight="@+id/Hotels"
        android:layout_below="@+id/Hotels"
        android:text="Means of Transportation"/>

    <Button
        android:id="@+id/Hotels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/transport"
        android:layout_alignRight="@+id/transport"
        android:layout_below="@+id/transport"
        android:text="Best Hotels" />



</RelativeLayout>